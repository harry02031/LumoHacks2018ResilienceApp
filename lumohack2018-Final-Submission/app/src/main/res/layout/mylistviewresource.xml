<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="104dp"
        android:layout_height="87dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding ="8dp"
        android:orientation="vertical">

        <TextView
            android:paddingTop="5dp"
            android:id="@+id/resourceNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Smith"
            android:textSize="16dp"
            android:textAppearance="@android:style/TextAppearance"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="206dp" />

        <TextView
            android:id="@+id/resourcePhoneId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 777-777-7777"
            android:textSize="9dp"
            app:layout_constraintTop_toBottomOf="@+id/resourceRatingId"
            tools:layout_editor_absoluteX="88dp" />

        <TextView
            android:id="@+id/resourceAddressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS: 1234 lol street, Coquitlam"
            android:textSize="9dp"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="170dp" />


        <TextView
            android:id="@+id/resourceDistanceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISTANCE: 5km"
            android:textSize="9dp"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="188dp" />

        <TextView
            android:id="@+id/resourceRatingId"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textSize="9dp"
            android:text="Rating: *****"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:layout_editor_absoluteX="88dp" />
    </LinearLayout>

    <Button
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reserve now"
        android:paddingTop="8dp"/>

</LinearLayout>